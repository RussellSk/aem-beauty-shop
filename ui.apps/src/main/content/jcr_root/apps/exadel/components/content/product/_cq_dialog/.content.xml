<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Product"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <productId
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Enter the product's id"
                            fieldDescription="Unique product id"
                            fieldLaber="ID"
                            name="./productId"
                            required="{Boolean}false"/>
                    <name
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Enter the product's title to display."
                            fieldDescription="The product's title to display."
                            fieldLabel="Name"
                            name="./name"
                            required="{Boolean}true"/>
                    <description
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Enter the product's description to display."
                            fieldDescription="The product's description to display."
                            fieldLabel="Description"
                            name="./description"
                            required="{Boolean}true"/>
                    <Brand
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Enter the product's brand name."
                            fieldDescription="The product's brand name."
                            fieldLabel="Brand"
                            name="./brand"
                            required="{Boolean}false"/>
                    <Image
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Enter the product's image url."
                            fieldDescription="The product's image url."
                            fieldLabel="Image URL"
                            name="./image"
                            required="{Boolean}false"/>
                    <Price
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Enter the product's price."
                            fieldDescription="The product's price."
                            fieldLabel="Price"
                            name="./price"
                            required="{Boolean}false"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>