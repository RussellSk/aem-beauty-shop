<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Header"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <name
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Enter the banner's title to display."
                            fieldDescription="The banner's title to display."
                            fieldLabel="Name"
                            name="./name"
                            required="{Boolean}true"/>
                    <description
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Enter the banner's description to display."
                            fieldDescription="The banner's description to display."
                            fieldLabel="Description"
                            name="./description"
                            required="{Boolean}true"/>
                    <primaryUrl
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Enter the banner's primary url."
                            fieldDescription="The banner's primary url."
                            fieldLabel="Primary URL"
                            name="./primaryUrl"
                            required="{Boolean}false"/>
                    <socondaryUrl
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Enter the banner's secondary url."
                            fieldDescription="The banner's secondary url."
                            fieldLabel="Secondary URL"
                            name="./secondaryUrl"
                            required="{Boolean}false"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>